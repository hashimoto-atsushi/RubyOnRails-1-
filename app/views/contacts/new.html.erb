<%= form_with(model: @contact, local: true) do |form| %>
<% if @contact.errors.any? %>
<div id="error_explanation">
    <h3><%= @contact.errors.count %>件のエラーがあります。</h3>
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
    <%if msg == "Name can't be blank"
    msg = "お名前を入力してください。"
    elsif msg ==  "Email can't be blank"
    msg = "Eメールアドレスを入力してください。"
    elsif msg == "Content can't be blank"
    msg = "本文を入力してください。"
  elsif msg == "Content is too long (maximum is 140 characters)"
    msg = "本文は140文字以内で入力してください。"%>
    <% end %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<div class="name">
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</div>
<div class="email">
  <%= form.label :email %><br>
  <%= form.text_field :email %>
</div>

<div class="content">
  <%= form.label :content %><br>
  <%= form.text_field :content %>
</div>
  <%= form.submit %>
<% end %>
